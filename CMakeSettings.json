{
  "configurations": [
    {
      "name": "x64-Debug",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [ "msvc_x86" ],
      "buildRoot": "${projectDir}\\out\\build\\${name}",
      "installRoot": "${projectDir}\\out\\install\\${name}",
      "cmakeCommandArgs": "",
      "buildCommandArgs": "",
      "ctestCommandArgs": "",
      "variables": [
        {
          "name": "CMAKE_TOOLCHAIN_FILE",
          "value": "${env.USERPROFILE}\\lib\\vcpkg\\scripts\\buildsystems\\vcpkg.cmake"
        },
        {
          "name": "CMAKE_PREFIX_PATH",
          "value": "${env.USERPROFILE}\\lib\\vcpkg\\installed\\x86-windows\\share"

        }
      ],
      "environments": [
        {
          "TEST_DIRECTORY": "${projectDir}\\test",
          "CONFIG_DIRECTORY": "${projectDir}"
        }
      ]
    }
  ]
}